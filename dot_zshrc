# Git worktree helper functions
# Usage: wt-new <branch-name> [base-branch]
# Creates a new worktree, installs dependencies, and opens VS Code
# Branch name will be automatically prefixed with your username
wt-new() {
  if [[ -z "$1" ]]; then
    echo "Usage: wt-new <branch-name> [base-branch]"
    echo "Example: wt-new my-feature main"
    echo "         Creates branch: $(whoami)/my-feature"
    return 1
  fi
  local input_name="$1"
  local username=$(whoami)
  local branch_name="$username/$input_name"
  local base_branch="${2:-main}"
  # Get the main repository root (not current worktree root)
  local repo_root=$(git worktree list 2>/dev/null | head -1 | awk '{print $1}')
  if [[ -z "$repo_root" ]]; then
    echo "Error: Not in a git repository"
    return 1
  fi
  local worktree_dir="$repo_root/.worktrees/$branch_name"
  # Check if worktree already exists
  if [[ -d "$worktree_dir" ]]; then
    echo "Error: Worktree already exists at $worktree_dir"
    return 1
  fi
  echo "Creating worktree for branch '$branch_name' based on '$base_branch'..."
  # Create the worktree (will create new branch if it doesn't exist)
  if git show-ref --verify --quiet "refs/heads/$branch_name"; then
    # Branch exists, checkout
    git worktree add "$worktree_dir" "$branch_name"
  else
    # Branch doesn't exist, create new one
    git worktree add -b "$branch_name" "$worktree_dir" "$base_branch"
  fi
  if [[ $? -ne 0 ]]; then
    echo "Error: Failed to create worktree"
    return 1
  fi
  # Copy .env.local if it exists
  if [[ -f "$repo_root/.env.local" ]]; then
    echo "Copying .env.local..."
    cp "$repo_root/.env.local" "$worktree_dir/.env.local"
  fi
  echo "Installing dependencies..."
  (cd "$worktree_dir" && pnpm install)
  # Create VS Code task for starting Claude
  mkdir -p "$worktree_dir/.vscode"
  cat > "$worktree_dir/.vscode/tasks.json" << 'EOF'
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Claude Code",
      "type": "shell",
      "command": "claude",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
EOF
  echo "Opening VS Code..."
  code --new-window "$worktree_dir"
  echo "✓ Worktree ready at: $worktree_dir"
  echo "  Claude Code will start automatically in the terminal"
  echo "  To switch to it: cd $worktree_dir"
}
# Usage: wt-clean <branch-name>
# Removes a worktree and cleans up references
# Automatically prefixes with username if not already prefixed
wt-clean() {
  if [[ -z "$1" ]]; then
    echo "Usage: wt-clean <branch-name>"
    echo "Example: wt-clean my-feature"
    return 1
  fi
  local input_name="$1"
  local username=$(whoami)
  local branch_name="$input_name"
  # If input doesn't contain a slash, prefix with username
  if [[ "$input_name" != */* ]]; then
    branch_name="$username/$input_name"
  fi
  # Get the main repository root (not current worktree root)
  local repo_root=$(git worktree list 2>/dev/null | head -1 | awk '{print $1}')
  if [[ -z "$repo_root" ]]; then
    echo "Error: Not in a git repository"
    return 1
  fi
  local worktree_dir="$repo_root/.worktrees/$branch_name"
  if [[ ! -d "$worktree_dir" ]]; then
    echo "Error: Worktree not found at $worktree_dir"
    echo "Attempting to prune stale worktrees..."
    git worktree prune
    return 1
  fi
  echo "Removing worktree at $worktree_dir..."
  git worktree remove "$worktree_dir"
  if [[ $? -eq 0 ]]; then
    echo "✓ Worktree removed successfully"
    echo "  Pruning worktree references..."
    git worktree prune
  else
    echo "Error: Failed to remove worktree"
    echo "  Try: git worktree remove --force $worktree_dir"
    return 1
  fi
}
# Usage: wt-list
# Lists all active worktrees
wt-list() {
  git worktree list
}

ghpr() {
  gh pr create --fill
}

